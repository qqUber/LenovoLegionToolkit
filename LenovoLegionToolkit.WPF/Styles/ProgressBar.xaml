<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Gaming Blue Colors -->
    <Color x:Key="GamingBlueColor">#00B4FF</Color>
    <Color x:Key="GamingBlueGlowColor">#00DCFF</Color>
    <SolidColorBrush x:Key="GamingBlueBrush" Color="{StaticResource GamingBlueColor}" />
    <SolidColorBrush x:Key="GamingBlueGlowBrush" Color="{StaticResource GamingBlueGlowColor}" />

    <!-- Modern Progress Bar with Rounded Caps and Glow -->
    <Style x:Key="GamingProgressBarStyle" TargetType="{x:Type ProgressBar}">
        <Setter Property="Height" Value="8" />
        <Setter Property="Background" Value="#3A3D48" />
        <Setter Property="Foreground" Value="{StaticResource GamingBlueBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid x:Name="TemplateRoot">
                        <!-- Background track with rounded ends -->
                        <Border 
                            x:Name="PART_Track"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            BorderThickness="0" />
                        
                        <!-- Glow effect behind the progress -->
                        <Border 
                            x:Name="GlowBorder"
                            CornerRadius="4"
                            HorizontalAlignment="Left"
                            Width="0">
                            <Border.Effect>
                                <DropShadowEffect 
                                    BlurRadius="12" 
                                    ShadowDepth="0" 
                                    Direction="0" 
                                    Color="{StaticResource GamingBlueGlowColor}" 
                                    Opacity="0.6" />
                            </Border.Effect>
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource GamingBlueColor}" Opacity="0.3" />
                            </Border.Background>
                        </Border>
                        
                        <!-- Progress indicator with rounded ends and gradient -->
                        <Border 
                            x:Name="PART_Indicator"
                            CornerRadius="4"
                            HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#0088CC" Offset="0" />
                                    <GradientStop Color="{StaticResource GamingBlueColor}" Offset="0.5" />
                                    <GradientStop Color="{StaticResource GamingBlueGlowColor}" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            
                            <!-- Shine overlay -->
                            <Border CornerRadius="4" Opacity="0.3">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFFFFF" Offset="0" />
                                        <GradientStop Color="Transparent" Offset="0.5" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsIndeterminate" Value="True">
                            <Setter TargetName="PART_Indicator" Property="Width" Value="Auto" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Compact version for smaller spaces -->
    <Style x:Key="GamingProgressBarCompactStyle" TargetType="{x:Type ProgressBar}" BasedOn="{StaticResource GamingProgressBarStyle}">
        <Setter Property="Height" Value="4" />
    </Style>

    <!-- Large version for prominent display -->
    <Style x:Key="GamingProgressBarLargeStyle" TargetType="{x:Type ProgressBar}" BasedOn="{StaticResource GamingProgressBarStyle}">
        <Setter Property="Height" Value="12" />
    </Style>

    <!-- Success variant (green) -->
    <Style x:Key="SuccessProgressBarStyle" TargetType="{x:Type ProgressBar}">
        <Setter Property="Height" Value="8" />
        <Setter Property="Background" Value="#2D3A2D" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid>
                        <Border 
                            Background="{TemplateBinding Background}"
                            CornerRadius="4" />
                        <Border 
                            x:Name="PART_Indicator"
                            CornerRadius="4"
                            HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#2E8B57" Offset="0" />
                                    <GradientStop Color="#3CB371" Offset="0.5" />
                                    <GradientStop Color="#50D890" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#50D890" Opacity="0.4" />
                            </Border.Effect>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Warning variant (orange) -->
    <Style x:Key="WarningProgressBarStyle" TargetType="{x:Type ProgressBar}">
        <Setter Property="Height" Value="8" />
        <Setter Property="Background" Value="#3A3528" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid>
                        <Border 
                            Background="{TemplateBinding Background}"
                            CornerRadius="4" />
                        <Border 
                            x:Name="PART_Indicator"
                            CornerRadius="4"
                            HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#CC7000" Offset="0" />
                                    <GradientStop Color="#FF9500" Offset="0.5" />
                                    <GradientStop Color="#FFB347" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#FF9500" Opacity="0.4" />
                            </Border.Effect>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Danger variant (red) -->
    <Style x:Key="DangerProgressBarStyle" TargetType="{x:Type ProgressBar}">
        <Setter Property="Height" Value="8" />
        <Setter Property="Background" Value="#3A2828" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid>
                        <Border 
                            Background="{TemplateBinding Background}"
                            CornerRadius="4" />
                        <Border 
                            x:Name="PART_Indicator"
                            CornerRadius="4"
                            HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#CC3030" Offset="0" />
                                    <GradientStop Color="#FF4444" Offset="0.5" />
                                    <GradientStop Color="#FF6B6B" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#FF4444" Opacity="0.4" />
                            </Border.Effect>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
