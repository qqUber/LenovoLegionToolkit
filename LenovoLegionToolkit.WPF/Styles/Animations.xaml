    <!-- ============================================ -->
    <!-- TOGGLE SWITCH ANIMATION (Global) -->
    <!-- ============================================ -->
    <Style TargetType="{x:Type wpfui:ToggleSwitch}" BasedOn="{StaticResource {x:Type wpfui:ToggleSwitch}}">
