    <!-- ============================================ -->
    <!-- PAGE FRAME TRANSITION (Fade In) -->
    <!-- ============================================ -->
    <Style x:Key="AnimatedFrameStyle" TargetType="{x:Type Frame}">
        <Setter Property="NavigationUIVisibility" Value="Hidden" />
        <Style.Triggers>
            <EventTrigger RoutedEvent="Frame.Navigated">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="0.3"
                            To="1"
                            Duration="0:0:0.25">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
